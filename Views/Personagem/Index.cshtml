@model IEnumerable<ficha_criacao_personagem_rpg_csharp.Models.PersonagemViewModel>
@{
    ViewData["Title"] = "Listar Personagem";
}
<div>
    <h2>Seus Personagens</h2>

    <a class="btn btn-primary" style="border-radius: 150px; cursor: pointer; " data-toggle="modal" data-target="#criarPersonagem"><i class="fa fa-user-plus"> Criar</i></a>
    <hr>
    
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Ra√ßa</th>
                <th scope="col">Classe</th>
                <th scope="col">Nivel</th>
                <th scope="col">Editar | Deletar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Raca</td>
                    <td>@item.Classe</td>
                    <td>@item.Nivel</td>
                    <td>
                        <a class="btn btn-warning btn-sm" style="border-radius: 150px;" href="~/Personagem/Editar/@item.Id"><i class="fas fa-edit"> Editar</i></a>
                        <span> | </span>
                        <a class="btn btn-danger btn-sm" style="border-radius: 150px;" href="~/Personagem/Delete/@item.Id"><i class="fas fa-trash"> Deletar</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal fade" id="criarPersonagem">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                
                <!-- Modal body -->
                <div class="modal-body">
                    @await Html.PartialAsync("~/Views/Personagem/New.cshtml", new ficha_criacao_personagem_rpg_csharp.Models.PersonagemViewModel())
                </div>
                
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
    
</div>